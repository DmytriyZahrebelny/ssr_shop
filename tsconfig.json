{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	]
}
